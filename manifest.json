{
  "manifest_version": 2,
  "name": "Radiodan Discovery",
  "description": "Display available Radiodans and control them",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    "ui/*"
  ],
  "permissions": [
    "management",
    "tabs"
  ]
}
